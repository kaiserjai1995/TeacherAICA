                    </RelativeLayout>

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/cell_title_view2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="7dp"
                        android:background="@drawable/card_background"
                        android:descendantFocusability="afterDescendants"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/solve_problem_question_image_outside2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginEnd="16dp"
                            android:src="@drawable/correct"/>

                        <TextView
                            android:id="@+id/solve_problem_problem_title_outside2"
                            fontPath="fonts/Raleway-Bold.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginBottom="7dp"
                            android:layout_toEndOf="@+id/solve_problem_question_image_outside2"
                            android:text="Equation"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            tools:ignore="MissingPrefix"/>

                        <TextView
                            fontPath="fonts/Raleway-Bold.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/solve_problem_problem_title_outside2"
                            android:layout_toEndOf="@+id/solve_problem_question_image_outside2"
                            android:text="3x*5x"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            tools:ignore="MissingPrefix"/>

                        <TextView
                            android:id="@+id/date_time_outside2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="-5dp"
                            android:layout_marginRight="-1dp"
                            android:text="12/12/12 1:00 AM"/>

                    </RelativeLayout>
                </FrameLayout>

            </com.ramotion.foldingcell.FoldingCell>
        </LinearLayout>

    </ScrollView>

</LinearLayout>